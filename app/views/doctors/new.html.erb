<fieldset class="smallForm">
  <legend class="formLegend"><h4><%= t('new_doctor_legend') %></h4></legend>

  <% if @doctor.errors.any? %>
      <div id="error_explanation" >
        <h4><%= pluralize(@doctor.errors.count, "error" ) %>
          Was found during validation, please fix them to continue:</h4>
        <ul>
          <% @doctor.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
  <% end %>

  <%= simple_form_for @doctor, :html => { :class => 'form-horizontal' } do |f| %>
      <%= f.input :name, label: t('name_header') %>
      <%= f.input :email, label: t('email_header')  %>
      <%= f.input :password, label: t('password_label') %>
      <%= f.input :password_confirmation, label: t('confirm_password_label') %>
      <br />
      <center>
        <%= f.button :submit, t('submit_new_doctor') %> &nbsp&nbsp&nbsp  <%= link_to t('go_back_to_doctors_link'), doctors_path %>
      </center>
  <% end %>



</fieldset>
