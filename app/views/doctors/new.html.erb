<fieldset class="smallForm">
  <legend class="formLegend"><h4>Добавление доктора</h4></legend>

  <% if @doctor.errors.any? %>
      <div id="error_explanation" >
        <h4><%= pluralize(@doctor.errors.count, "error" ) %>
          Was found during validation, please fix them to continue:</h4>
        <ul>
          <% @doctor.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
  <% end %>

  <%= simple_form_for @doctor, :html => { :class => 'form-horizontal' } do |f| %>
      <%= f.input :name, label: "Имя :" %>
      <%= f.input :email, label: "email :"  %>
      <%= f.input :password, label: "Пароль :" %>
      <!--<%= f.input :password_confirmation, label: "Пароль еще раз :" %>-->
      <br />
      <center>
        <%= f.button :submit, 'Добавить' %> &nbsp&nbsp&nbsp  <%= link_to 'Вернуться к списку врачей', doctors_path %>
      </center>
  <% end %>



</fieldset>
