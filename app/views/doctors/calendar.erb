<fieldset class="smallForm" style="margin-right: 15%; margin-left: 15%;">
  <legend class="formLegend"><h4>Календарь врача</h4></legend>
  <table class="table table-striped">
    <h3>Bрач :</h3>
    <tr>
      <td>
        Имя :
      </td>
      <td>
        <%= @doctor.name %>
      </td>
    </tr>
    <tr>
      <td>
        email :
      </td>
      <td>
        <%= @doctor.email %>
      </td>
    </tr>
  </table>
  <h3>Встречи :</h3>
  <% if @meetings.any? %>

      <table class="table table-hover">
        <thead>
        <tr>
          <th></th>
          <th>Начало</th>
          <th>Конец</th>
        </tr>
        </thead>

        <tbody>
        <% @meetings.each do |meeting| %>
            <tr>
              <td><%= link_to 'Пациент', patients_info_path(meeting.patient_id) %></td>
              <td><%= meeting.time_start%></td>
              <td><%= meeting.time_end %></td>

              <td><%= link_to 'Установить время', edit_meeting_path(meeting) %></td>

            </tr>
        <% end %>
        </tbody>

        <tr>
          <td colspan="2">
            <%= link_to 'Вернуться к списку врачей', doctors_path %>
          </td>
        </tr>
      </table>


  <% else %>
      У вас нет встреч
      <br />
      <%= link_to 'Вернуться к списку врачей', doctors_path %>
  <% end %>



</fieldset>