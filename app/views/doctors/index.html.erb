<% if notice %>
    <p id="notice" ><%= notice %></p>
<% end %>

<h2><%= t('doctors_list') %></h2>

<% if @doctors.any? %>

    <table class="table table-hover">
      <thead>
      <tr>
        <th><%= t('name_header') %></th>
        <th><%= t('email_header') %> </th>
      </tr>
      </thead>

      <tbody>
      <% @doctors.each do |doctor| %>
          <tr>
            <td><%= doctor.name %></td>
            <td><%= doctor.email %></td>
            <td><%= link_to t('watch_link'), doctor_path(doctor) %></td>
            <td><%= link_to t('calendar_link'), doctors_calendar_path(doctor) %></td>
            <td><%= link_to t('edit_link'), edit_doctor_path(doctor) %></td>
            <td><%= link_to t('delete_link'), doctor, method: :delete, data: { confirm: t('confirm_delete_message') } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>


<% else %>
    <%= t('no_doctors_message') %>
<% end %>


<br>

