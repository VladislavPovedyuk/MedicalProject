
<fieldset class="smallForm">
  <legend class="formLegend"><h4>Вход</h4></legend>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
      <div class="form-inputs">
        <% if !flash.empty? -%>
            <%= content_tag :div, flash[:alert], class: 'alert alert-danger' if flash[:alert] %>
        <% end -%>

        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false, label: 'Пароль :' %>
        <%= f.input :remember_me, label: 'Запомнить меня :',as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Войти" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
</fieldset>